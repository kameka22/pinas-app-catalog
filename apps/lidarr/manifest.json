{
  "id": "lidarr",
  "name": "Lidarr",
  "version": "3.1.0.4875",
  "description": {
    "en": "Looks and smells like Sonarr but made for music",
    "fr": "Gestionnaire automatique de musique"
  },
  "author": "Lidarr",
  "license": null,
  "website": "https://lidarr.audio/",
  "icon": "mdi:music",
  "requirements": {
    "min_ram": 256,
    "min_disk": 200,
    "arch": [
      "aarch64",
      "x86_64"
    ],
    "dependencies": [
      "docker"
    ]
  },
  "install": {
    "type": "docker",
    "image": "linuxserver/lidarr:3.1.0",
    "steps": [
      {
        "action": "mkdir",
        "path": "${APP_DATA_DIR}/data/config"
      },
      {
        "action": "mkdir",
        "path": "${DATA_DIR}/storage/downloads"
      },
      {
        "action": "compose_up",
        "dest": "${APP_DATA_DIR}/docker-compose.yml",
        "content": "services:\n  server:\n    image: linuxserver/lidarr:3.1.0\n    restart: on-failure\n    ports:\n    - 8686:8686\n    volumes:\n    - ${APP_DATA_DIR}/data/config:/config\n    - ${DATA_DIR}/storage/downloads:/downloads\n    environment:\n    - PUID=1000\n    - PGID=1000\n",
        "project_name": "lidarr"
      }
    ]
  },
  "uninstall": {
    "steps": [
      {
        "action": "compose_down",
        "compose_file": "${APP_DATA_DIR}/docker-compose.yml",
        "remove_volumes": false,
        "project_name": "lidarr"
      }
    ]
  },
  "files": {},
  "config": {},
  "frontend": {
    "component": "WebviewApp",
    "icon": "mdi:music",
    "gradient": "from-green-500 to-lime-600",
    "window": {
      "width": 1200,
      "height": 800,
      "min_width": 900,
      "min_height": 600
    },
    "config": {
      "port": 8686,
      "path": "",
      "title": "Lidarr"
    },
    "i18n": {
      "en": {
        "description": "Looks and smells like Sonarr but made for music"
      },
      "fr": {
        "description": "Gestionnaire automatique de musique"
      }
    }
  }
}
